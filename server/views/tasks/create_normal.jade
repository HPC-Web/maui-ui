div normal
		form.sky-form(action='/tasks/create', method='POST')
			header Create new task
				fieldset
					section
						input(type='hidden', name='type', value='simple')
						label.input
							input(type='text', name='name', placeholder='Task name')
				footer
					button.btn-u(type='submit') Submit
//
	tabs: [bash - textarea(placeholder="Bash code"), binary - input(type="file")]
	h1 input arguments
		input(type="text")
	label number of nodes
		input(type="slider", min="1", max="100")
	label available memory
		input(type="range", min="1024", max=1024*1024) // in megabytes
	label available processor share
		input(type="range", min="5", max="25") // in percents
	label available storage share
		input(type="range", min="1024", max=1024*1024) // in megabytes
	label priority
		select
			option critical
			option high
			option low
	label due date // after which date task is no longer necessary
		input(type="datetime")
	label time out
		input(type="slider", min="0", max="300") // in minues





