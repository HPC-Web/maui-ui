extends ../layout

block content
	form(action='', method='POST')
		input(type='hidden', name='type', value='simple')
		if error
			| Can't send. Theres an error: #{error}
		else
			each param in data.parameters
				.field
					label
						span= param.name
						input(type=param.type, name=param.name, data-restrictions=param.restrictions.join(' '))
			button Send stuff

