extends ../wrapper

block content
	.container.content
		.tab-v3
			ul.nav.nav-pills.list-inline.margin-bottom-40
				li: a(href='/dashboard/') Dashboard
				li: a(href='/tasks/') Tasks
				li: a(href="/tasks/create/") Create task

		form.sky-form(action='/dashboard/edit', method='POST')
			fieldset
				section
					label.label Name:
					label.input 
						input(type='text', name='name', value=user.name())
					label.label Email:
					label.input 
						input(type='email', name='email', value=user.email())
					label.label Type:
					label.select
						select(name='type')
							option(value='simple', selected=user.type() === 'simple') Simple
							option(value='normal', selected=user.type() === 'normal') Normal
							option(value='advanced', selected=user.type() === 'advanced') Advanced
						i
			footer
				button.btn-u(type='submit') Save